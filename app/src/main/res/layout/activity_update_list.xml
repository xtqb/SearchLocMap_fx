<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/green_little">

        <Button
            android:id="@+id/bt_update_back"
            android:layout_width="54dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_state"
            android:gravity="center"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/tv_update_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/app_update_list"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_search_map"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/rl_title_bar"
        android:background="@color/white">

        <ImageView
            android:id="@+id/im_search_map"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/icon_laucher_search" />

        <TextView
            android:id="@+id/tv_search_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/im_search_map"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/im_search_map"
            android:text="@string/settings_search_map"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_map_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/im_search_map"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/im_search_map"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_map_new_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/im_search_map"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/tv_map_version"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_map_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/im_search_map"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="下载更新"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/splite"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_search_map"
        android:background="@color/gray_background" />

    <RelativeLayout
        android:id="@+id/rl_upload_service"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/splite"
        android:background="@color/white">

        <ImageView
            android:id="@+id/im_upload_service"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/icon_laucher_upload" />

        <TextView
            android:id="@+id/tv_bd_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/im_upload_service"
            android:text="@string/settings_upload_service"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bd_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/im_upload_service"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bd_new_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/tv_bd_version"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bd_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:text="下载更新"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/splite1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_upload_service"
        android:background="@color/gray_background" />

</RelativeLayout>