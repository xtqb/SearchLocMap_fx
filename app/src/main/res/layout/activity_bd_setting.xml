<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_bd_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/green_little">

        <ImageView
            android:id="@+id/im_bd_back"
            android:layout_width="54dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_state"
            android:gravity="center"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/bd_communication_mode"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/split"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rl_bd_title"
        android:background="@color/gray_background" />

    <RadioGroup
        android:id="@+id/rg_bd"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_below="@+id/split"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/rb_jzh"
            style="@style/custom_checkbox_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:text="@string/bd_setting_jzh"
            android:textSize="14sp"
            android:checked="false" />

        <View
            android:id="@+id/split2"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray_background" />
        <RadioButton
            android:id="@+id/rb_jqzh"
            style="@style/custom_checkbox_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:text="@string/bd_setting_jzhqzh"
            android:textSize="14sp" />
    </RadioGroup>

    <View
        android:id="@+id/split3"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@+id/rg_bd"
        android:background="@color/gray_background" />
</RelativeLayout>