<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/green_little">

        <TextView
            android:id="@+id/add_per_back"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_selector_tv"
            android:gravity="center"
            android:text="@string/person_manager_cancel"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/add_details"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/add_details"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/save"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_selector_tv"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_local_identify_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="@string/local_identify"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_local_identify"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_local_identify_title"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_channel_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/tv_channel"
            android:gravity="center"
            android:text="@string/local_channel"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_channel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/im_channel_edit"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/im_channel_edit"
            android:layout_width="54dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:background="@drawable/bg_selector_channel_select" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/add_coding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/im_required"
            android:text="@string/coding"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/add_coding_input"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/add_coding"
            android:background="@drawable/rectangle_bg"
            android:focusable="false"
            android:gravity="center"
            android:hint="@string/input_word"
            android:singleLine="true"
            android:textColorHint="@color/green_little"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/icon_watch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/add_coding"
            android:background="@drawable/icon_person_manager" />

        <ImageView
            android:id="@+id/im_required"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_required_fields" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@color/gray_background" />

    <ScrollView
        android:id="@+id/pre_add_details_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/pre_add_details_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/per_add_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/name"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/add_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/per_add_name"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/im_required_name"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_required_fields" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/per_add_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/sex"
                    android:textSize="15sp" />

                <RadioGroup
                    android:id="@+id/rg_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/per_add_sex"
                    android:background="@color/white"
                    android:checkedButton="@+id/btn1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/btn1"
                        style="@style/custom_checkbox_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="@string/person_sex_man"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/btn2"
                        style="@style/custom_checkbox_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/person_sex_women"
                        android:textSize="15sp" />
                </RadioGroup>
                <!--
            <EditText
                android:id="@+id/add_sex"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/per_add_sex"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text=""
                android:textSize="15sp" />
                -->
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/per_add_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/phone"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/add_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/per_add_phone"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/per_phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/phone1"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/add_phone1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/per_phone1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/per_phone2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/phone2"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/add_phone2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/per_phone2"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/per_add_blood"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/per_blood"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/add_blood"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@+id/per_add_blood"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/per_add_allergy"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="#ffffff"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/per_allergy"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/add_allergy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/per_add_allergy"
                    android:background="@null"
                    android:gravity="top|left"
                    android:lineSpacingMultiplier="1.2"
                    android:textSize="15sp" />
            </RelativeLayout>

            <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />
            -->
        </LinearLayout>
    </ScrollView>

</LinearLayout>