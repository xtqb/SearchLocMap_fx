<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/green_little">

        <Button
            android:id="@+id/report_back"
            android:layout_width="54dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_state"

            android:gravity="center"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/sos_report"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/sos_report"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/gray_background"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_anto_report"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/anto_report"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:text="@string/anto_report"
            android:textSize="14sp" />

        <com.lhzw.searchlocmap.view.ToggleButtonView
            android:id="@+id/anto_report_toggle"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/gray_background"
        android:visibility="gone" />

    <TextView
        android:id="@+id/select_report"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rl_background"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:text="@string/select_report"
        android:textSize="14sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/gray_background"
        android:visibility="gone" />

    <TextView
        android:id="@+id/custom_report"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rl_background"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:text="@string/custom_report"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>