<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <CheckBox
        android:id="@+id/report_choose"
        style="@style/custom_checkbox_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/report_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/report_num_tv"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/report_choose"
        android:focusable="false"
        android:singleLine="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/report_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/report_name_tv"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="2dp"
        android:text="@string/report_num"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/spread"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/icon_close_32"
        android:padding="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/report_num_tv"
        android:layout_marginTop="5dp"
        android:background="@color/gray_lite" />

</RelativeLayout>