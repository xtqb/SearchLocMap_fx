    <com.lhzw.searchlocmap.view.DragView
        android:id="@+id/drag_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/touch_ic"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/fl_menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:id="@+id/ll_btn_container"
                android:layout_width="50.2dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_black_circle_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_btn_draw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:src="@drawable/selector_sf_draw_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:text="标绘列表"
                        android:textColor="@color/selector_text_color_white_green"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="3dp"
                        android:background="#4DFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_btn_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:duplicateParentState="true"
                            android:src="@drawable/selector_sf_sms_bg" />

                        <TextView
                            android:id="@+id/tv_conmnication_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/bg_round_rect"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:visibility="gone" />
                    </FrameLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:text="消息通信"
                        android:textColor="@color/selector_text_color_white_green"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="3dp"
                        android:background="#4DFFFFFF" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/selector_sf_search_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:text="搜索功能"
                        android:textColor="@color/selector_text_color_white_green"
                        android:textSize="10sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="3dp"
                        android:background="#4DFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_btn_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/selector_sf_location_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
