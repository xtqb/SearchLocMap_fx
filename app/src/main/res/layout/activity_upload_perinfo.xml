<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/report_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/green_little">

        <ImageView
            android:id="@+id/report_back"
            android:layout_width="54dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_state"
            android:gravity="center"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/sos_report"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/settings_person_upload"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/split"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/report_title"
        android:background="@color/gray_background" />

    <RadioGroup
        android:id="@+id/report"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_below="@+id/split"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/wried"
            style="@style/custom_checkbox_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:text="@string/settings_wriedreport"
            android:textSize="14sp" />

        <View
            android:id="@+id/split2"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray_background" />

        <RadioButton
            android:id="@+id/wrieless"
            style="@style/custom_checkbox_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:text="@string/settings_wrielessreport"
            android:textSize="14sp" />
    </RadioGroup>

    <View
        android:id="@+id/split3"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@+id/report"
        android:background="@color/gray_background" />

</RelativeLayout>