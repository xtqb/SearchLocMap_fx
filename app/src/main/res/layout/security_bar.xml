<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/gary1">

    <TextView
        android:id="@+id/tv_function"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_selector_functions"
        android:padding="2dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/security_title"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/im_location"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/im_person_state"
        android:background="@drawable/bg_selector_location"
        android:padding="2dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/im_person_state"
        android:layout_width="54dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_person_state"
        android:padding="2dp" />

    <View
        android:id="@+id/scroll_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>