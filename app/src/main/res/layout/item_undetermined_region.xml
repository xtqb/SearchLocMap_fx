<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">

    <com.lhzw.searchlocmap.view.OnClickLinearLayout
        android:id="@+id/ll_undermined_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/awhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_potrait_up"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_name_up"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:singleLine="true" />
    </com.lhzw.searchlocmap.view.OnClickLinearLayout>

    <com.lhzw.searchlocmap.view.OnClickLinearLayout
        android:id="@+id/ll_undermined_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_undermined_up"
        android:background="@color/awhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_potrait_down"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/im_potrait_up" />

        <TextView
            android:id="@+id/tv_name_down"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:singleLine="true" />
    </com.lhzw.searchlocmap.view.OnClickLinearLayout>

</RelativeLayout>