<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lhzw.searchlocmap.view.PageViewChange
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="51dp"></com.lhzw.searchlocmap.view.PageViewChange>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/table">

        <ImageView
            android:id="@+id/tabline"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/green_little" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gary1"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_security"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/security_im"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/people_pre" />

            <TextView
                android:id="@+id/security"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/security"
                android:textColor="@color/green_little" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_persons"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/persons_im"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/jiankong_def" />

            <TextView
                android:id="@+id/manageper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/manageper"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/settings_im"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/icon_setting_def" />

            <TextView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/setting"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>