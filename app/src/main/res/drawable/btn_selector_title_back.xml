<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--初始状态-->
    <item android:state_enabled="false" android:drawable="@color/gray_dark" />

    <!--按下状态-->
    <item android:state_pressed="true" android:state_enabled="true" android:drawable="@color/gray_middle" />
    <item android:state_focused="true" android:state_enabled="true" android:drawable="@color/gray_middle" />
    <item android:state_enabled="true" android:drawable="@color/gray_dark" />
</selector>
